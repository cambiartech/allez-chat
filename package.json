{
    "name": "allez-chat",
    "version": "1.0.0",
    "description": "Real-time chat widget for taxi app",
    "scripts": {
        "start": "concurrently \"npm run server\" \"npm run client\"",
        "server": "nodemon server/index.js",
        "client": "cd client && npm start",
        "install-all": "npm install && cd client && npm install"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^16.5.0",
        "express": "^4.18.2",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.15.1",
        "socket.io": "^4.7.2"
    },
    "devDependencies": {
        "concurrently": "^8.2.2",
        "nodemon": "^3.0.2"
    }
}
