{
    "name": "allez-chat",
    "version": "1.0.0",
    "description": "Real-time chat widget for Allez taxi app",
    "engines": {
        "node": "18.19.0",
        "npm": ">=8.0.0"
    },
    "scripts": {
        "dev": "netlify dev",
        "build": "npm run install-client && cd client && npm run build",
        "start": "cd client && npm start",
        "install:all": "npm install && cd client && npm install --legacy-peer-deps",
        "install-client": "cd client && npm install --legacy-peer-deps",
        "test": "cd client && npm test"
    },
    "dependencies": {
        "@netlify/functions": "^2.0.0",
        "axios": "^1.10.0",
        "cors": "^2.8.5",
        "dotenv": "^16.5.0",
        "express": "^5.1.0",
        "mongodb": "^6.0.0",
        "mongoose": "^8.16.0",
        "socket.io": "^4.8.1",
        "socket.io-client": "^4.8.1",
        "typescript": "^5.0.0"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "netlify-cli": "^17.0.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/cambiartech/allez-chat.git"
    },
    "keywords": [
        "chat",
        "websocket",
        "react",
        "taxi"
    ],
    "author": "Cambiar Technologies",
    "license": "ISC"
}
